{
  "name": "gm-contract-interface",
  "version": "1.0.0",
  "description": "A modern, privacy-focused GM (Good Morning) smart contract interface built with React, TypeScript, and Zama FHEVM technology",
  "keywords": [
    "gm",
    "smart-contract",
    "fhe",
    "privacy",
    "ethereum",
    "react",
    "typescript",
    "zama",
    "fhevm"
  ],
  "author": "Trung KTS <@trungkts29>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "verify-contract": "node scripts/verify-contract.js",
    "verify-simple": "node scripts/verify-simple.js",
    "verify-manual": "node scripts/verify-manual.js",
    "read-contract": "node scripts/read-contract-info.js",
    "verify-actual": "node scripts/verify-with-actual-source.js",
    "deploy": "node scripts/deploy-contract.js",
    "deploy-hardhat": "npx hardhat run scripts/deploy-hardhat.cjs --network sepolia",
    "compile": "npx hardhat compile",
    "verify-hardhat": "npx hardhat verify --network sepolia"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ethers": "^6.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "hardhat": "^2.26.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
